{
  "name": "Get file path",
  "description": "Get the file path for the specified sites.",
  "version": "1.0.5",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "options_page": "settings.html",
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "storage",
    "notifications"
  ]
}