{
  "name": "Get file path",
  "description": "Get the file path for the specified sites.",
  "version": "1.1.4",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "settings.html",
  "permissions": [
    "scripting",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}